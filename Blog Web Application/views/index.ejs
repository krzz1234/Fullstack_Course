<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>My Blog</h1>
    <a class="btn" href="/new">Create New Post</a>
    <% if (posts.length === 0) { %>
      <p>No posts yet.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a class="btn-small" href="/edit/<%= post.id %>">Edit</a>
          <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
            <button class="btn-small delete" type="submit">Delete</button>
          </form>
        </div>
      <% }); %>
    <% } %>
  </div>
</body>
</html>
